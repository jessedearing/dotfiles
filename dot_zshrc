kubectl() {
  local __kubectl=$__USER_PATH/bin/kubectl
  if [ -x $HOME/bin/kubectl ]; then
    __kubectl=$HOME/bin/kubectl
  fi

  if [[ "$1" =~ '(node-shell|klock)' ]]; then
    $__kubectl "$@"
  elif [[ "$@" =~ '(attach|run|exec|logs|edit)' ]]; then
    $__kubectl "$@"
  else
    grc -e -s -c conf.kubectl -- $__kubectl "$@"
  fi
}

