	tool = fugitive
[core]
	excludesfile = ~/.gitignore
[difftool "vim"]
  cmd = vimdiff $LOCAL $REMOTE
[difftool]
	prompt = false
[diff]
	tool = vim
[init]
	templatedir = ~/.git_template
[credential]
	helper = osxkeychain
[push]
	default = simple
[help]
	autocorrect = 1
[include]
  path = ~/.gitconfig.local
[alias]
  reuse=commit --amend --reuse-message=HEAD
  s=status -sb
[fetch]
  prune = true
[remote "origin"]
  fetch = +refs/pull/*:refs/remotes/origin/pr/*
  fetch = +refs/pull/*:refs/remotes/origin/pr/*
[filter "lfs"]
	clean = git-lfs clean -- %f
	smudge = git-lfs smudge -- %f
	required = true
