	trustExitCode = true
	prompt = false
[diff]
	tool = vim
	colorMoved = default
[init]
	templatedir = ~/.git_template
[push]
	default = simple
[help]
	autocorrect = 1
[include]
  path = ~/.gitconfig.local
[alias]
  reuse=commit --amend --reuse-message=HEAD
  s=status -sb
[fetch]
  prune = true
[filter "lfs"]
	clean = git-lfs clean -- %f
	smudge = git-lfs smudge -- %f
	required = true
