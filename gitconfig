[user]
	name = Jesse Dearing
	email = jesse.dearing@gmail.com
[color]
	ui = true
[mergetool "opendiff"]
	cmd = "opendiff   -ancestor  -merge "
[mergetool "fugitive"]
  cmd = mvim -f -c "Gdiff" "$MERGED"
[merge]
	tool = fugitive
[core]
	excludesfile = ~/.gitignore
[difftool "mvim"]
  cmd = mvim -d $LOCAL $REMOTE
[difftool]
	prompt = false
[difftool "Kaleidoscope"]
	cmd = ksdiff-wrapper git \"$LOCAL\" \"$REMOTE\"
[diff]
	tool = Kaleidoscope
[init]
	templatedir = ~/.git_template
[credential]
	helper = osxkeychain
[push]
	default = simple
[help]
	autocorrect = 1
[include]
  path = ~/.gitconfig.local
[alias]
  reuse=commit --amend --reuse-message=HEAD
  s=status -sb
[fetch]
  prune = true
[remote "origin"]
  fetch = +refs/pull/*:refs/remotes/origin/pr/*
  fetch = +refs/pull/*:refs/remotes/origin/pr/*
[filter "lfs"]
	clean = git-lfs clean -- %f
	smudge = git-lfs smudge -- %f
	required = true
[github]
	user = jessedearing
